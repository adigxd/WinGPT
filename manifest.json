{
  "manifest_version": 3,
  "name": "WinGPT",
  "version": "1.0.0",
  "description": "A truly lightweight and discrete ChatGPT window.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["chat-window.css"],
      "run_at": "document_end"
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_title": "Toggle WinGPT",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "toggle-chat": {
      "description": "Toggle WinGPT chat window"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["models.json"],
      "matches": ["<all_urls>"]
    }
  ]
}

